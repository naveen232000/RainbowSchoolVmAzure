@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome</h1>
    <h2>Rainbow School</h2>
</div>
<div class="container ">
<form class="">
        <div class="row justify-content-center ">
        <div class="form-group col-md-8 mt-1">
        <label for="email1">Email address</label>
        <input type="email" class="form-control" id="email1" aria-describedby="emailHelp" placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
        <div class="form-group col-md-8 mt-1">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter fullname" required>
  
    </div>
        <div class="form-group col-md-8 mt-1">
        <label for="feedback">Type Your Feedback</label>
        <textarea type="text" class="form-control" id="feedback" placeholder="Give your valid feedback here" required></textarea>
    </div>
        <div class="form-group form-check col-md-8 mt-1">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Send Response to Me</label>
    </div>
        <button type="submit" class="btn btn-primary col-md-8  mt-1">Submit</button>
    </div>
</form>
   </div>
